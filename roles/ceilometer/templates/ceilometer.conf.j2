[database]
connection = mongodb://{{ ceilometer_db_user }}:{{ ceilometer_db_user_pwd }}@{{ mongos_host_ha  }}:{{ mongos_port_ha }}/{{ ceilometer_db_name }}

[DEFAULT]
rpc_backend = rabbit
auth_strategy = keystone

[oslo_messaging_rabbit]
rabbit_host = {{ rabbit_hostname }}
rabbit_userid = {{ rabbit_userid }}
rabbit_password = {{ rabbit_pass }}

[keystone_authtoken]
auth_uri = http://{{ keystone_hostname }}:5000
auth_url = http://{{ keystone_hostname }}:35357
auth_plugin = password
project_domain_id = default
user_domain_id = default
project_name = service
username = ceilometer
password = {{ ceilometer_pass }}

[service_credentials]
os_auth_url = http://controller:5000/v2.0
os_username = ceilometer
os_tenant_name = service
os_password = {{ ceilometer_pass }}
os_endpoint_type = internalURL
os_region_name = RegionOne

[keymgr]
encryption_auth_url = http://{{ keystone_hostname }}:5000/v3
